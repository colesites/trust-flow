# Better Auth
BETTER_AUTH_SECRET=replace-with-32-plus-char-secret
BETTER_AUTH_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Neon / Prisma
DATABASE_URL=postgresql://user:password@localhost:5432/trustflow

# AI Gateway
AI_GATEWAY_API_KEY=replace-with-ai-gateway-key
AI_GATEWAY_MODEL=provider/model-id

# Testing
TRUSTFLOW_TEST_AUTH=disabled

# Feature flags (comma-separated)
TRUSTFLOW_FEATURE_FLAGS=claims_v1,underwriting_v1,distribution_v1,kyc_v1,payouts_v1,ai_v1

# Observability logging
TRUSTFLOW_OBSERVABILITY_LOGGING=enabled
